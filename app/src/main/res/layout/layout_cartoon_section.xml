<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="@dimen/txt_16"
    android:id="@+id/ll_cartoon_section"
    android:visibility="gone"
    android:layout_height="wrap_content">

    <include layout="@layout/layout_header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/txt_16"/>

    <ImageView
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:id="@+id/iv_cartoon_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ph_cartoon"/>

    <TextView
        android:id="@+id/tv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rabin Shrestha"
        android:layout_gravity="left"
        android:textColor="@color/gray_888888"
        android:padding="5dp"
        android:textSize="@dimen/txt_10"/>

</LinearLayout>